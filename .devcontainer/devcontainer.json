{
  "name": "C++ / Rust WASM",
  "image": "mcr.microsoft.com/devcontainers/base",
  "features": {
    "devwasm.azurecr.io/dev-wasm/dev-wasm-feature/wasmtime-wasi:0.0.4": {
      "Version": 17
    },
    "ghcr.io/devcontainers/features/rust": {},
    "devwasm.azurecr.io/dev-wasm/dev-wasm-feature/rust-wasi:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools"
      ]
    }
  },
  "postCreateCommand": "rustup target add wasm32-wasi && cargo install cargo-wasi && cargo install wasm-pack",
  "runArgs": ["--platform=linux/amd64" ]
}
